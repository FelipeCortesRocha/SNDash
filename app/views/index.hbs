{{> head }}

<body>
  {{!-- Inicio Navbar --}}
  <nav id="navbar">
    <div class="nav-wrapper row" id="divNav">
      <div  class="col s3" style="display: flex">
        <span id="logoSN">SNDash</span>
        <i class="material-icons hide-on-small-only">insert_chart</i>
      </div>
      <div class="col s7"><input placeholder="Digite aqui sua busca" id="txtBusca" type="text"></div>
      <div class="col s2" style="height: 100%; text-align: center"><button id="btnBusca" class="waves-effect waves-light btn"><i class="material-icons" style="line-height: 45px">search</i></button></div>
    </div>
  </nav>
  {{!-- Fim Navbar --}}

  {{!-- Inicio Animações Lottie --}}
  <div id="initialLottie" class="divLottie">
    <h2 class="lottieMsg">Bem vindo ao SNDash! <br> Busque sobre os assuntos que deseja separando eles por virgula</h2>
    <div id="openLottie" class="lottie"></div>
  </div>
  <div id="loadingLottie" class="divLottie">
    <h2 class="lottieMsg">Buscando e analisando informações... <br> Por favor, aguarde um momento</h2>
    <div id="loading" class="lottie"></div>
  </div>
  {{!-- Fim Animações Lottie --}}

  <div id="container">

    <div class="resultHeader row">
      <h2 class="col s6" id="searchTitle"></h2>
      <h2 class="col s6" id="totalResult"></h2>
    </div>

    <div class="row line"> 
        <div class="col m4 push-m4 s12 chartDiv"><canvas id="pieChart" class="chart"></canvas></div>
        <div class="col m4 pull-m4 s12 chartDiv"><canvas id="lineChart" class="chart"></canvas></div>
        <div class="col m4 s12 tableDiv">
          <div class="table">
            <p id="txtNoLocation" class="center-align hide">Os tweets analisádos não continham localização.</p>
            <table id="tableLocations" class="striped hide">
              <thead>
                <tr><th>Local</th><th>Publicações</th></tr>
              </thead>
              <tbody id="tableBody"></tbody>
            </table>
          </div>
        </div>
    </div>

    <div class="row line"> 
       <div id="divTweets" class="col m6 s12" style="height: 100%">
          <div class="cartao">
            <span class="card-title">Última publicação positiva</span>
            <p id="txtPositive" class="card-text"></p>
            <div id="divDataPositive" clss="hide" style="display: flex"><p id="txtPositiveData" class="data"></p><a id="linkPositive" target="_blank" href="" class="link">Ver publicação</a></div>
          </div>
          <div class="cartao">
            <span class="card-title">Última publicação negativa</span>
            <p id="txtNegative" class="card-text"></p>
            <div id="divDataNegative" clss="hide" style="display: flex"><p id="txtNegativeData" class="data"></p><a id="linkNegative" target="_blank" href="" class="link">Ver publicação</a></div>
          </div>
        </div>
       <div id="map" class="col m6 s12"></div>
    </div>
    
  </div>

  {{> scripts }}
</body>
